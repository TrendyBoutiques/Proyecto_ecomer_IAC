pipeline {
    agent any
    
    environment {
        AWS_REGION = 'us-east-1'
        TF_VERSION = '1.5.0'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'üì¶ Obteniendo c√≥digo del repositorio...'
                checkout scm
            }
        }
        
        stage('Verificar Herramientas') {
            steps {
                echo 'üîç Verificando instalaci√≥n de herramientas...'
                sh '''
                    terraform --version
                    aws --version
                '''
            }
        }
        
        stage('Terraform Init') {
            steps {
                echo 'üöÄ Inicializando Terraform...'
                dir('iac') {
                    sh '''
                        terraform init -reconfigure
                    '''
                }
            }
        }
        
        stage('Terraform Validate') {
            steps {
                echo '‚úÖ Validando configuraci√≥n de Terraform...'
                dir('iac') {
                    sh '''
                        terraform validate
                    '''
                }
            }
        }
        
        stage('Terraform Plan') {
            steps {
                echo 'üìã Generando plan de ejecuci√≥n...'
                dir('iac') {
                    sh '''
                        terraform plan -out=tfplan
                    '''
                }
            }
        }
        
        stage('Terraform Apply - Approval') {
            when {
                branch 'main'
            }
            steps {
                script {
                    input message: '¬øDesea aplicar los cambios de Terraform?', ok: 'Aplicar'
                }
            }
        }
        
        stage('Terraform Apply') {
            when {
                branch 'main'
            }
            steps {
                echo 'üî® Aplicando cambios de infraestructura...'
                dir('iac') {
                    sh '''
                        terraform apply -auto-approve tfplan
                    '''
                }
            }
        }
        
        stage('Guardar Outputs') {
            when {
                branch 'main'
            }
            steps {
                echo 'üíæ Guardando outputs de Terraform...'
                dir('iac') {
                    sh '''
                        terraform output -json > outputs.json || echo "{}" > outputs.json
                    '''
                    archiveArtifacts artifacts: 'outputs.json', allowEmptyArchive: true
                }
            }
        }
    }
    
    post {
        success {
            echo '‚úÖ Pipeline ejecutado exitosamente!'
        }
        failure {
            echo '‚ùå Pipeline fall√≥. Revisa los logs.'
        }
        always {
            echo 'üßπ Limpiando workspace...'
            cleanWs()
        }
    }
}